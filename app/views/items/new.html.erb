<%= simple_form_for @item, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

      <div class="field">
        <div class="control">
        <%= f.input :name, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Enter your item name" %>
        </div>
      </div>



      <div class="field">
        <div class="control">
          <%= f.input :description, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>


      <div class="field">
        <div class="control">
            <%= f.input :avatar, as: :file, required: false, input_html: { class:"file-input job-avatar" }, label: false, wrapper: false %>
        </div>
      </div>




    <div class="columns">

      <div class="column">
        <output id="list"></output>
      </div>
    </div>

    <hr/>


    <%= f.button :submit, class: "button is-primary is-large is-rounded mv4" %>
<% end %>
